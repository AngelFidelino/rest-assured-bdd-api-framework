    {
      "request": {
        "method": "GET",
        "urlPathPattern": "/posts/([1-9]*)"
      },
      "response": {
        "status": 200,
        "bodyFileName": "posts-GET-ONE-response-200.json",
        "transformerParameters": {
          "disableBodyFileTemplating": true
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
