        "transformerParameters": {
          "disableBodyFileTemplating": true
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    },
    {
      "request": {
        "method": "POST",
        "url": "/posts"
      },
      "response": {
        "status": 200,
        "bodyFileName": "posts-POST-response-200.json",
        "transformerParameters": {
          "disableBodyFileTemplating": true
        },
        "headers": {
          "Content-Type": "application/json"
        }
      }
    }
  ]
}
